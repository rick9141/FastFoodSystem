@model FastFoodSystem.Models.Pedido

@{
    ViewBag.Title = "Edit";
}

<h2>Alterar Status do Pedido</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Pedido</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdPedido)

        <div class="form-group">
            @Html.LabelFor(model => model.StatusPedido.IdStatus, "Status do Pedido", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.StatusPedido.IdStatus, (IEnumerable<SelectListItem>)ViewData["StatusList"], "--Select--", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.StatusPedido.IdStatus, "", new { @class = "text-danger" })
            </div>
        </div>





        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar Alteração" class="btn btn-outline-danger" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar a pagina anterior", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
